#ifndef mmdl_TYPETRAITS_H_
#define mmdl_TYPETRAITS_H_

#include <assert.h>

namespace mmdl {
	
	template <typename T>
	struct TypeTraits{
		
		/*! \brief A helper struct for predefinition of types in mmdl classes. 
		 */
		
		TypeTraits(){
			assert(0 && "YOU MUST DEFINE A TypeTraits SPECIALIZATION FOR YOUR CLASS.");
		}
	};
	
	//////////////////////////////////////////////////////////////
} // namespace mmdl
#endif


