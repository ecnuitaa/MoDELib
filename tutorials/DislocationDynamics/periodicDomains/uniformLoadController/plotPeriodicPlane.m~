clear all
close all
clc

P0=[-4.596194077712558e+02  4.596194077712558e+02 -4.596194077712558e+02];

L2G=[-0.000000000000000e+00  8.164965809277259e-01 -5.773502691896257e-01;
 7.071067811865475e-01  4.082482904638630e-01  5.773502691896257e-01;
 7.071067811865475e-01 -4.082482904638630e-01 -5.773502691896257e-01];

unitNormal=L2G(:,3);

points=load("points.txt");


patches=load("edges.txt");

poly=load("poly.txt");
poly3D=load("poly3D.txt");

C3D=mean(poly3D);
norms3D
for k=1:size(poly3D,1)
    relP=(poly3D(k,:)-P0)';
    norm(poly3D(k,:)-C3D)
    %polyCheck(k,:)=(L2G'*(relP-dot(relP,unitNormal)*unitNormal))';
    %polyCheck(k,:)=(L2G'*(relP))';
    polyCheck(k,:)=(L2G'*(poly3D(k,:)-poly3D(1,:))')';
end

center=poly(1,:);
poly=poly(2:end,:);

figure(2)
axis equal
hold on
plot3(poly3D(:,1),poly3D(:,2),poly3D(:,3),'ko')
plot3(C3D(1),C3D(2),C3D(3),'ms')
grid on

figure(1)
clf
hold on
axis equal
plot(points(:,2),points(:,3),'o')
plot3(poly3D(:,1),poly3D(:,2),poly3D(:,3),'ko')
plot3(P0(1),P0(2),P0(3),'ms')

plot([poly(:,1);poly(1,1)],[poly(:,2);poly(1,2)],'x-r','Linewidth',2)
plot([polyCheck(:,1);polyCheck(1,1)],[polyCheck(:,2);polyCheck(1,2)],'o-g','Linewidth',2)

%text(points(:,2),points(:,3),num2str(points(:,1)))
%for n=1:size(poly,1)
%plot([center(1) poly(n,1)],[center(2) poly(n,2)],'r--')
%end
grid on

patchIDs=unique(patches(:,3));
patchSize=length(patchIDs)
for p=1:length(patchIDs)
    patchID=patchIDs(p);
    rows=find(patches(:,3)==patchID);
    edges=patches(rows,[1 2]);
    sourceRows=[];
    sinkRows=[];
    for r=1:size(edges,1)
        sourceRows=[sourceRows;find(points(:,1)==edges(r,1))];
        sinkRows=[sinkRows;find(points(:,1)==edges(r,2))];
    end
    patch(points(sourceRows,2),points(sourceRows,3),'b','FaceAlpha',0.5);
    drawnow
end
