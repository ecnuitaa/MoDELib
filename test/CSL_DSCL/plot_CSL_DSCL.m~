close all
clear all
clc

SIGMA=[5]

for s=1:length(SIGMA)
    sigma=SIGMA(s);
    
    fileName=['SimpleCubic_sigma_' num2str(sigma)];
    %fileName=['FCC_sigma_' num2str(sigma)];
    M=load([fileName '.txt']);
    A=M(1:3,:);
    B=M(4:6,:);
    CSL=M(7:9,:);
    DSCL=M(10:12,:);
    
    %    G=[1 0 0;       0 1 -2;0 2 1]
    %G=[1 0 0;0 3 2;0 -2 3]
    L=3.3;
    figure(2*s)
    clf
    
    %            plotLattice(G,L,'g.',2)
    plotLattice(DSCL,L,'k.',1)
    
    plotLattice(CSL,L,'g.',2)
    
    plotLattice(A,L,'bo',1)
    plotLattice(B,L,'rx',1)
    
    legend('DSCL','CSL','A','B')
    %          CSL1=[CSL(:,3) CSL(:,1) CSL(:,2)];
    %                   plotLattice(CSL1,R,'ms',1)
    %          CSL2=[CSL(:,2) CSL(:,3) CSL(:,1)];
    %                   plotLattice(CSL2,R,'ms',1)
    
    %         plotLattice(DSCL,R,'k.',1)
    
    title(fileName)
    axis equal
    
end

